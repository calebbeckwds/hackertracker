<script type="text/javascript">
$(document).ready(function() {
  $('#page-users').each(function() {
    var $link = $(this);
    var $dialog = $('<div></div>')
      .load($link.attr('href') + ' #content')
      .dialog({
        autoOpen:  false,
        title:  $link.attr('title'),
        width:  500,
        height:  300,
        });

    $link.click(function() {
        $dialog.dialog('open');

        return false;

        });
    });
});
</script>


<h1>Listing users</h1>
<div class="well">
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th></th>
    <th>Name</th>
    <th>Handle</th>
    <th>Paypal email</th>
    <th>Phone number</th>
    <th>Level</th>
    <th>Date joined</th>
    <th>Last Payment</th>
  </tr>

<% @users.each_with_index do |user, i| %>
  <% late = user.latest_payment ? ( user.latest_payment.transaction_time < (Time.now - 33.days) ) : false %>
  <tr class="<%= 'late' if late %>">
    <td><%= i+1 %></td>
    <td><%= link_to user.name, edit_user_path(user) %></td>
    <td><%= user.handle %></td>
    <td><%= user.paypal_email %></td>
    <td><%= user.phone_number %></td>
    <td><%= user.level %></td>
    <td><%= user.date_joined %></td>
    <td><%= user.latest_payment ? "#{user.latest_payment.amount} @ #{user.latest_payment.transaction_time}" : "(n/a)"%></td>
  </tr>
<% end %>
</table>
</div>
<br />

<%= link_to 'Create New User', new_user_path %>
