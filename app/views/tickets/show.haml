
%h1
  Object:
  = @ticket.unique_item.name

%p#notice= notice

- if @ticket.user
  %p
    %b User:
    = @ticket.user.name

%p
  %b Status:
  = @ticket.status ? 'active' : 'resolved'

%h5 Ticket: 

%pre= @ticket.body
%br/

- if @ticket.status
  .row-fluid
    = form_for [@ticket.unique_item, @ticket] do |f|
      = f.hidden_field :status, :value => false
      = f.submit 'Resolve Ticket', :class => 'btn btn-success span12'
- else
  .row-fluid
    = form_for [@ticket.unique_item, @ticket] do |f|
      = f.hidden_field :status, :value => true
      = f.submit 'Unresolve Ticket', :class => 'btn btn-warning span12'


.row-fluid
  = link_to 'Edit', edit_unique_item_ticket_path(@ticket.unique_item, @ticket), :class => 'btn btn-info span12'
