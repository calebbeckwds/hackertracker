%h1 Listing tutorials
%table
  %tr
    %th Fuid
    %th User
    %th Body
    %th Url
    %th
    %th
    %th
  - @tutorials.each do |tutorial|
    %tr
      %td= tutorial.fuid
      %td= tutorial.user_id
      %td= tutorial.body
      %td= tutorial.url
      %td= link_to 'Show', tutorial
      %td= link_to 'Edit', edit_tutorial_path(tutorial)
      %td= link_to 'Destroy', tutorial, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Tutorial', new_tutorial_path
