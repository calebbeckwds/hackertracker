= form_for [@tutorial.unique_item, @tutorial] do |f|
  - if @tutorial.errors.any?
    #error_explanation
      %h2
        = pluralize(@tutorial.errors.count, "error")
        prohibited this tutorial from being saved:
      %ul
        - @tutorial.errors.full_messages.each do |msg|
          %li= msg
  .row-fluid
    = f.text_area :body, :placeholder => 'Full tutorial body text', :class => 'span12'
  .row-fluid
    = "- OR -"
  %br/
  .row-fluid
    = f.text_field :url, :placeholder => 'http://url/to/tutorial', :class => 'span12'
  .row-fluid
    = f.submit :class => 'btn btn-info span12'
