<h1>Listing payments</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>User</th>
    <th>Type</th>
    <th>Email</th>
    <th>Transactionid</th>
    <th>Status</th>
    <th>Amount</th>
    <th>Currencycode</th>
    <th>Feeamt</th>
    <th>Netamt</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= link_to payment.user.name, user_path(payment.user) if user %></td>
    <td><%= payment.transaction_type %></td>
    <td><%= payment.email %></td>
    <td><%= payment.transactionid %></td>
    <td><%= payment.status %></td>
    <td><%= payment.amount %></td>
    <td><%= payment.currencycode %></td>
    <td><%= payment.feeamt %></td>
    <td><%= payment.netamt %></td>
    <td><%= payment.name %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

