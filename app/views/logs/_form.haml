= form_for [@log.unique_item, @log] do |f|
  - if @log.errors.any?
    #error_explanation
      %h2
        = pluralize(@log.errors.count, "error")
        prohibited this log from being saved:
      %ul
        - @log.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .actions
    = f.submit
