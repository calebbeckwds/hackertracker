= form_for [@caveat.unique_item, @caveat] do |f|
  - if @caveat.errors.any?
    #error_explanation
      %h2
        = pluralize(@caveat.errors.count, "error")
        prohibited this caveat from being saved:
      %ul
        - @caveat.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .actions
    = f.submit
